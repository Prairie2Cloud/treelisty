rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Shared trees (cloud share links)
    // Anyone authenticated can create, anyone can read
    match /shared/{shareId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Live collaboration rooms
    match /syncRooms/{roomId} {
      allow read, write: if request.auth != null;
    }

    // BUILD 700: Gallery submissions
    // Users can create their own submissions, read any, update/delete only their own
    match /gallery_submissions/{submissionId} {
      // Anyone authenticated can read all submissions (for browsing gallery)
      allow read: if request.auth != null;

      // Only authenticated users can create submissions
      allow create: if request.auth != null
        && request.resource.data.submitterId == request.auth.uid;

      // Users can only update/delete their own submissions
      allow update, delete: if request.auth != null
        && resource.data.submitterId == request.auth.uid;
    }

    // Future: Gallery public view (approved trees only)
    // match /gallery/{treeId} {
    //   allow read: if true;
    //   allow write: if false; // Admin only via backend
    // }
  }
}
