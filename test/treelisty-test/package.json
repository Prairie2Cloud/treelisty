{
  "name": "treelisty-tests",
  "version": "1.0.0",
  "description": "Test suite for Treelisty - Universal Project Decomposition Tool",
  "type": "module",
  "scripts": {
    "extract": "node scripts/extract-testable.js",
    "test": "npm run extract && npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "playwright test test/e2e/critical-paths.spec.js",
    "test:scenario": "vitest run test/scenarios",
    "test:scenario:live": "MOCK_AI=false vitest run test/scenarios",
    "test:visual": "playwright test test/e2e/visual-regression.spec.js",
    "test:watch": "npm run extract && vitest watch",
    "test:coverage": "npm run extract && vitest run --coverage",
    "test:debug": "npm run extract && vitest --inspect-brk --single-thread",
    "serve": "npx serve -p 3000 ..",
    "setup": "node scripts/setup-testing.js"
  },
  "devDependencies": {
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "jsdom": "^24.0.0",
    "happy-dom": "^14.0.0",
    "@playwright/test": "^1.44.0",
    "serve": "^14.2.0"
  },
  "keywords": [
    "treelisty",
    "testing",
    "vitest",
    "playwright"
  ],
  "author": "Treelisty Team",
  "license": "MIT"
}
